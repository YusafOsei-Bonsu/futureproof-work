<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Add an Entry | The Best Anonymous Journaling Website</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <!-- Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <!-- Latest Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
    crossorigin="anonymous"></script>
  <!-- CSS -->
  <link rel="stylesheet" href="/public/css/blogpage1.css" />
</head>
<body>
  <!-- Navigational bar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <a href="#" class="navbar-brand">TITLE/LOGO OF PROJECT</a>
    <ul class="navbar-nav">
      <li class="nav-item">
        <form action="/" method="get"><button>Home</button></form>
      </li>
      <li class="nav-item">
        <form action="/postPage" method="get"><button type="submit" style="color: rgb(255, 255, 255, .9);">Write a Post</button></form>
      </li>
    </ul>
  </nav>
  <div class="flexContainer">
    <div class="BlogContainer">
      <h1> <%= JSON.stringify(entries.title).replace(/['"]+/g,'') %> </h1>
       <h3> <%= JSON.stringify(entries.author).replace(/['"]+/g,'') %> </h3><br>
       <p> <%= JSON.stringify(entries.entry).replace(/['"]+/g,'') %> </p><br>
       <img src=" <%= JSON.stringify(entries.gif).replace(/['"]+/g,'') %> " alt='a gif'>
    </div>
    <form action="/addComment" method="post">
      <div class="commentContainer">
        <!-- User adds their username -->
        <input type="text" name="commentUsername" id=commentUser placeholder="Add username" />
        <br>
        <!-- User writes their blog entry here -->
        <textarea name="comment" id="comment" placeholder="Add comment" required></textarea>
        <br>

        <br>
        <input type="submit" name="entrysubmit" id="entrysubmit" value="Submit" class="goldBtn">
    </form>
  </div>
  <!-- JS -->
  <script src="script/addpost.js" type="text/javascript"></script>
</body>
<footer></footer>

</html>